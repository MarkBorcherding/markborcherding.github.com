<article>
  <div class="row">
    <div class='one columns sidebar'>
      <span class='month'>{{ post.date | date: "%d" }}</span>
      <span class='day'>{{ post.date | date: "%b" }}</span> <br/>
      <span class='year'>{{ post.date | date: "%Y" }}</span>
    </div>
    <div class='eleven columns'>
      <div class='row'>
        <h2 class='twelve columns'>
          <a href="{{post.url}}">{{ post.title }}</a>
        </h2>
      </div>
      <div class='row'>
        <div class='seven columns'>
          {{ post.content }}
        </div>
      </div>
    </div>
  </div>
</article>
